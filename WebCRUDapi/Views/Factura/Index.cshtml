
@{
    ViewBag.Title = "Facturas";
}

<style>
    #dt-records tbody th, #dt-records tbody td {
        padding: 0.25rem !important;
        line-height: 1.3em !important;
        vertical-align: middle !important;
    }

    #btnnuevo {
        margin-top: 10px;
        margin-bottom: 10px;
    }
</style>

<div class="br-section-wrapper">

    <button id="btnnuevo" class="btn btn-primary" data-target="#modal-record"><i class="fa fa-plus" aria-hidden="true"></i> Nuevo</button>

    <table id="dt-records" class="table-wrapper table display responsive nowrap table-hover" style="width:100%" data-page-length='10'>
        <thead class="thead-colored thead-primary">
            <tr>
                <th>IdFactura</th>
                <th>Numero</th>
                <th>IdCliente</th>
                <th>Fecha</th>
                <th>IdZonaCliente</th>
                <th>Total</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

<div id="modal-record" class="modal" role="dialog">
    <div class="modal-dialog" style="width: 400px !important;">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Direcciones AW</h3>
            </div>
            <div class="modal-body">
                <form id="NewRecord" role="form">
                    <div>
                        <div class="form-group">
                            <label for="txtNumero" class="control-label">Numero</label>
                            <input type="text" id="txtNumero" class="form-control" placeholder="00000" />
                        </div>
                        <div class="form-group">
                            <label for="txtIdCliente" class="control-label">IdCliente</label>
                            <input type="number" id="txtIdCliente" class="form-control" placeholder="0" />
                        </div>
                        <div class="form-group">
                            <label for="txtFecha" class="control-label">Fecha</label>
                            <input type="text" id="txtFecha" class="form-control" placeholder="2020-01-01" />
                        </div>
                        <div class="form-group">
                            <label for="txtIdZonaCliente" class="control-label">IdZonaCliente</label>
                            <input type="number" id="txtIdZonaCliente" class="form-control" placeholder="0" />
                        </div>
                        <div class="form-group">
                            <label for="txtTotal" class="control-label">Total</label>
                            <input type="number" id="txtTotal" class="form-control" placeholder="100" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button id="btnguardar" data-dismiss="modal" class="btn btn-primary">Guardar</button>
                        <button id="btncerrar" data-dismiss="modal" class="btn btn-danger">Cerrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/Factura.js"></script>